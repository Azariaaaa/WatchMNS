@model WatchMNS.ViewModel.CreateProfessionnalStatusViewModel


<h1 class="text-light text-center">Gestion des status professionnels</h1>

<div class="custom-border text-light p-4">

    <h2>Status professionnel existants</h2>

    <table class="table table-dark table-hover">

        <thead class="fw-bolder">
            <td colspan="1">Id</td>
            <td colspan="1">Nom status</td>
            <td colspan="1">Action</td>
        </thead>
        @foreach (ProfessionnalStatus professionnalStatus in Model.ExistingProfessionnalStatuses)
        {
            <tr>
                <td colspan="1">@professionnalStatus.Id</td>
                <td colspan="1">@professionnalStatus.Label </td>
                <td colspan="1">@Html.ActionLink("Supprimer", "DeleteProfessionnalStatus", "Admin", new { id = professionnalStatus.Id }, new { @class = "btn btn-light btn-sm" }) </td>
            </tr>
        }
    </table>
</div>


<div class="custom-border p-4 mt-4 text-light">
    <h2>Créer un status professionnel</h2>
    <form asp-action="CreateProfessionnalStatus" asp-controller="Admin">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ProfessionnalStatus.Label" class="control-label text-light"></label>
            <input asp-for="ProfessionnalStatus.Label" class="form-control" />
            <span asp-validation-for="ProfessionnalStatus.Label" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-warning mt-3" />
        </div>
    </form>
</div>
    



